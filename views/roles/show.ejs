<%- include('../partials/header', { title: 'Detalle del Rol' }) %>

    <div class="container mt-4">
        <div class="card shadow-sm">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0">
                    <i class="fas fa-user-shield"></i> Detalle del Rol
                </h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">ID</dt>
                    <dd class="col-sm-9">
                        <%= rol.id_rol %>
                    </dd>

                    <dt class="col-sm-3">Nombre del Rol</dt>
                    <dd class="col-sm-9">
                        <%= rol.nombre_rol %>
                    </dd>
                </dl>

                <div class="d-flex justify-content-between mt-4">
                    <a href="/roles" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Volver
                    </a>
                    <div class="btn-group">
                        <a href="/roles/<%= rol.id_rol %>/edit" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                        <form action="/roles/<%= rol.id_rol %>?_method=DELETE" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger" onclick="confirmarEliminacion(event, 'rol')">
                                <i class="fas fa-trash"></i> Eliminar
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>