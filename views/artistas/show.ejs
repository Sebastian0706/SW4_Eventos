<%- include('../partials/header', { title }) %>

    <div class="container mt-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                <li class="breadcrumb-item"><a href="/artistas">Artistas</a></li>
                <li class="breadcrumb-item active" aria-current="page">Detalle del Artista</li>
            </ol>
        </nav>

        <div class="row">
            <div class="col-md-4">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0"><i class="fas fa-user-graduate"></i> Informaci√≥n del Artista</h5>
                    </div>
                    <div class="card-body">
                        <h2 class="card-title">
                            <%= artista.nombre %>

                        </h2>
                        <p class="card-text">
                            <strong><i class="fas fa-calendar-alt"></i> Fecha de registro:</strong>
                            <%= new Date(artista.fecha_registro).toLocaleDateString() %>
                        </p>
                        <div class="mt-3">
                            <a href="/artistas/<%= artista.id %>/edit" class="btn btn-warning">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <form action="/artistas/<%= artista.id %>?_method=DELETE" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-danger"
                                    onclick="confirmarEliminacion(event, 'estudiante')">
                                    <i class="fas fa-trash"></i> Eliminar
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>