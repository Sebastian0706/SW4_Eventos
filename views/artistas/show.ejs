<%- include('../partials/header', { title: 'Detalle del Artista' }) %>

<div class="container mt-4">
  <div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
      <h4 class="mb-0">
        <i class="fas fa-user-graduate"></i> Detalle del Artista
      </h4>
    </div>
    <div class="card-body">
      <dl class="row">
        <dt class="col-sm-3">ID</dt>
        <dd class="col-sm-9"><%= artista.id_artista %></dd>

        <dt class="col-sm-3">Nombre del Artista</dt>
        <dd class="col-sm-9"><%= artista.nombre_artista %></dd>

      </dl>

      <div class="d-flex justify-content-between mt-4">
        <a href="/artistas" class="btn btn-secondary">
          <i class="fas fa-arrow-left"></i> Volver
        </a>
        <div class="btn-group">
          <a href="/artistas/<%= artista.id %>/edit" class="btn btn-warning">
            <i class="fas fa-edit"></i> Editar
          </a>
          <form action="/artistas/<%= artista.id %>?_method=DELETE" method="POST" class="d-inline">
            <button type="submit" class="btn btn-danger" onclick="confirmarEliminacion(event, 'artista')">
              <i class="fas fa-trash"></i> Eliminar
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
