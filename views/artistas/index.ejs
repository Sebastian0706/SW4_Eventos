<%- include('../partials/header', { title }) %>
<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0"><i class="fas fa-user-graduate"></i> Listado de artistas</h1>
    <a href="/artistas/create" class="btn btn-primary">
      <i class="fas fa-plus"></i> Nuevo artista
    </a>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <% if (artistas && artistas.length > 0) { %>
        <div class="table-responsive">
          <table class="table table-hover">
            <thead class="thead-light">
              <tr>
                <th>ID</th>
                <th>Nombre</th>
              </tr>
            </thead>
            <tbody>
              <% artistas.forEach(artista => { %>
                <tr>
                  <td><%= artista.id %></td>
                  <td><%= artista.nombre %></td>
                  
                  <td>
                    <div class="btn-group btn-group-sm">
                      <a href="/artistas/<%= artista.id %>" class="btn btn-info" data-toggle="tooltip" title="Ver detalle">
                        <i class="fas fa-eye"></i>
                      </a>
                      <a href="/artistas/<%= artista.id %>/edit" class="btn btn-warning" data-toggle="tooltip" title="Editar">
                        <i class="fas fa-edit"></i>
                      </a>
                      <form action="/artistas/<%= artista.id %>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger" data-toggle="tooltip" title="Eliminar" onclick="confirmarEliminacion(event, 'artista')">
                          <i class="fas fa-trash"></i>
                        </button>
                      </form>
                    </div>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <div class="alert alert-info">
          <i class="fas fa-info-circle"></i> No hay artistas registrados. 
          <a href="/artistas/create" class="alert-link">Registre un nuevo artista</a>.
        </div>
      <% } %>
    </div>
  </div>
</div>
<br>
<%- include('../partials/footer') %>