<%- include('../../partials/header', { title, user: user }) %>

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="mb-0"><i class="fas fa-ticket-alt"></i> Listado de boletas</h1>
            <a href="/admin/boletas/create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Nueva boleta
            </a>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <% if (boletas && boletas.length> 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="thead-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Precio</th>
                                    <th>Tipo</th>
                                    <th>Localidad</th>
                                    <th>N.ยบ Personas</th>
                                    <th>ID Evento</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% boletas.forEach(boleta=> { %>
                                    <tr>
                                        <td>
                                            <%= boleta.id_boleta %>
                                        </td>
                                        <td>$<%= boleta.precio_boleta %>
                                        </td>
                                        <td>
                                            <%= boleta.tipo_boleta %>
                                        </td>
                                        <td>
                                            <%= boleta.localidad_boleta %>
                                        </td>
                                        <td>
                                            <%= boleta.num_personas %>
                                        </td>
                                        <td>
                                            <%= boleta.id_evento_PK %>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a href="/admin/boletas/<%= boleta.id_boleta %>" class="btn btn-info"
                                                    data-toggle="tooltip" title="Ver detalle">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="/admin/boletas/<%= boleta.id_boleta %>/edit"
                                                    class="btn btn-warning" data-toggle="tooltip" title="Editar">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <form action="/admin/boletas/<%= boleta.id_boleta %>?_method=DELETE"
                                                    method="POST" class="d-inline">
                                                    <button type="submit" class="btn btn-danger" data-toggle="tooltip"
                                                        title="Eliminar"
                                                        onclick="confirmarEliminacion(event, 'boleta')">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }); %>
                            </tbody>
                        </table>
                    </div>
                    <% } else { %>
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> No hay boletas registradas.
                            <a href="/admin/boletas/create" class="alert-link">Registre una nueva boleta</a>.
                        </div>
                        <% } %>
            </div>
        </div>
    </div>

    <br>
    <%- include('../../partials/footer') %>