<%- include('../../partials/header', { title, user: user }) %>

    <div class="container mt-4">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">
                    <i class="fas fa-<%= isEditing ? 'edit' : 'plus' %>"></i>
                    <%= isEditing ? 'Editar' : 'Registrar' %> Boleta
                </h4>
            </div>
            <div class="card-body">
                <% if (errors && errors.length> 0) { %>
                    <div class="alert alert-danger">
                        <h5 class="alert-heading">
                            <i class="fas fa-exclamation-triangle"></i> Errores de validación
                        </h5>
                        <ul class="mb-0">
                            <% errors.forEach(error=> { %>
                                <li>
                                    <%= error.msg %>
                                </li>
                                <% }); %>
                        </ul>
                    </div>
                    <% } %>

                        <form action="<%= isEditing ? `/boletas/${boleta.id_boleta}?_method=PUT` : '/boletas' %>"
                            method="POST">
                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <label for="precio_boleta">Precio</label>
                                    <input type="number" class="form-control" id="precio_boleta" name="precio_boleta"
                                        value="<%= boleta.precio_boleta || '' %>" required>
                                </div>

                                <div class="form-group col-md-4">
                                    <label for="tipo_boleta">Tipo de Boleta</label>
                                    <input type="text" class="form-control" id="tipo_boleta" name="tipo_boleta"
                                        value="<%= boleta.tipo_boleta || '' %>" required>
                                </div>

                                <div class="form-group col-md-4">
                                    <label for="localidad_boleta">Localidad</label>
                                    <input type="text" class="form-control" id="localidad_boleta"
                                        name="localidad_boleta" value="<%= boleta.localidad_boleta || '' %>" required>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <label for="num_personas">Número de Personas</label>
                                    <input type="number" class="form-control" id="num_personas" name="num_personas"
                                        value="<%= boleta.num_personas || '' %>" required>
                                </div>

                                <div class="form-group col-md-4">
                                    <label for="id_evento_PK">ID del Evento</label>
                                    <input type="number" class="form-control" id="id_evento_PK" name="id_evento_PK"
                                        value="<%= boleta.id_evento_PK || '' %>" required>
                                </div>
                            </div>

                            <div class="form-group d-flex justify-content-between mt-3">
                                <a href="/admin/boletas" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Cancelar
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i>
                                    <%= isEditing ? 'Actualizar' : 'Guardar' %>
                                </button>
                            </div>
                        </form>
            </div>
        </div>
    </div>

    <br>
    <%- include('../../partials/footer') %>