<%- include('../../partials/header', { title: 'Detalle del Rol' , user: user }) %>

    <div class="container mx-auto mt-8 px-4">
        <div class="bg-gray-800 text-gray-100 rounded-lg shadow-md overflow-hidden">
            <!-- Header -->
            <div class="bg-gray-900 text-white px-6 py-4">
                <h4 class="text-xl font-semibold mb-0 flex items-center">
                    <i class="fas fa-user-shield mr-3"></i>
                    Detalle del Rol
                </h4>
            </div>

            <!-- Contenido -->
            <div class="p-6">
                <!-- Información del rol -->
                <div class="bg-gray-700 rounded-md p-6 mb-6 border border-gray-600">
                    <dl class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        <div>
                            <dt class="text-sm font-medium text-gray-300 mb-1">ID</dt>
                            <dd class="text-lg font-semibold text-gray-100">
                                <%= rol.id_rol %>
                            </dd>
                        </div>

                        <div class="md:col-span-2">
                            <dt class="text-sm font-medium text-gray-300 mb-1">Nombre del Rol</dt>
                            <dd class="text-lg font-semibold text-gray-100">
                                <%= rol.nombre_rol %>
                            </dd>
                        </div>
                    </dl>
                </div>

                <!-- Información adicional -->
                <div class="border-t border-gray-600 pt-6">
                    <h5 class="text-lg font-medium text-gray-100 mb-4 flex items-center">
                        <i class="fas fa-info-circle mr-2 text-gray-400"></i>
                        Información del Registro
                    </h5>
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 text-sm text-gray-300">
                        <div class="flex items-center">
                            <i class="fas fa-calendar-alt mr-2 text-gray-400"></i>
                            <span>Registrado en el sistema</span>
                        </div>
                        <div class="flex items-center">
                            <i class="fas fa-user-shield mr-2 text-gray-400"></i>
                            <span>ID: <%= rol.id_rol %></span>
                        </div>
                    </div>
                </div>

                <!-- Botones de acción -->
                <div
                    class="flex flex-col sm:flex-row justify-between items-center gap-4 pt-6 border-t border-gray-600 mt-6">
                    <!-- Botón Volver -->
                    <a href="/admin/roles"
                        class="w-full sm:w-auto inline-flex items-center justify-center px-4 py-2 border border-gray-600 text-sm font-medium rounded-md text-gray-200 bg-gray-700 hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors">
                        <i class="fas fa-arrow-left mr-2"></i>
                        Volver
                    </a>

                    <!-- Grupo de botones de acción -->
                    <div class="flex flex-col sm:flex-row w-full sm:w-auto gap-2">
                        <a href="/admin/roles/<%= rol.id_rol %>/edit"
                            class="w-full sm:w-auto inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-gray-600 hover:bg-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors">
                            <i class="fas fa-edit mr-2"></i>
                            Editar
                        </a>

                        <form action="/admin/roles/<%= rol.id_rol %>?_method=DELETE" method="POST"
                            class="w-full sm:w-auto">
                            <button type="submit"
                                class="w-full inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors"
                                onclick="confirmarEliminacion(event, 'rol')">
                                <i class="fas fa-trash mr-2"></i>
                                Eliminar
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mb-8"></div>

    <%- include('../../partials/footer') %>