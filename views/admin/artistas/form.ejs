<%- include('../../partials/header', { title, user: user }) %>

<div class="container mx-auto mt-8 px-4">
  <div class="bg-gray-800 text-gray-100 rounded-lg shadow-md overflow-hidden">
    <!-- Header del formulario -->
    <div class="bg-gray-900 text-white px-6 py-4">
      <h4 class="text-xl font-semibold mb-0 flex items-center">
        <i class="fas fa-<%= isEditing ? 'edit' : 'plus' %> mr-2"></i>
        <%= isEditing ? 'Editar' : 'Registrar' %> Artista
      </h4>
    </div>

    <!-- Cuerpo del formulario -->
    <div class="p-6">
      <!-- Mensajes de error -->
      <% if (errors && errors.length > 0) { %>
        <div class="bg-red-800/20 border border-red-800 rounded-md p-4 mb-6">
          <div class="flex items-center mb-2">
            <i class="fas fa-exclamation-triangle text-red-400 mr-2"></i>
            <h5 class="text-red-300 font-medium">Errores de validación</h5>
          </div>
          <ul class="text-red-400 text-sm space-y-1 ml-6">
            <% errors.forEach(error => { %>
              <li class="list-disc">
                <%= error.msg %>
              </li>
            <% }); %>
          </ul>
        </div>
      <% } %>

      <!-- Formulario -->
      <form action="<%= isEditing ? `/artistas/${artista.id_artista}?_method=PUT` : '/artistas' %>" method="POST">
        <!-- Campo de nombre -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
          <div class="col-span-1">
            <label for="nombre_artista" class="block text-sm font-medium text-gray-300 mb-2">
              Nombre del artista
            </label>
            <input 
              type="text" 
              class="w-full px-3 py-2 border border-gray-700 rounded-md shadow-sm bg-gray-700 text-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:border-gray-500 transition-colors" 
              id="nombre_artista" 
              name="nombre_artista"
              value="<%= artista.nombre_artista || '' %>" 
              required
              placeholder="Ingrese el nombre del artista"
            >
          </div>
        </div>

        <!-- Botones de acción -->
        <div class="flex flex-col sm:flex-row justify-between items-center gap-4 pt-4 border-t border-gray-700">
          <a href="/admin/artistas" class="w-full sm:w-auto inline-flex items-center justify-center px-4 py-2 border border-gray-600 text-sm font-medium rounded-md text-gray-200 bg-gray-700 hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors">
            <i class="fas fa-arrow-left mr-2"></i>
            Cancelar
          </a>
          <button type="submit" class="w-full sm:w-auto inline-flex items-center justify-center px-6 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-gray-600 hover:bg-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors">
            <i class="fas fa-save mr-2"></i>
            <%= isEditing ? 'Actualizar' : 'Guardar' %>
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<div class="mb-8"></div>

<%- include('../../partials/footer') %>
