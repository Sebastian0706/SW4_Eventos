<%- include('../../partials/header', { title, user: user }) %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0"><i class="fas fa-shopping-cart"></i> Listado de Ventas</h1>
    <a href="/admin/ventas/create" class="btn btn-primary">
      <i class="fas fa-plus"></i> Nueva Venta
    </a>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <% if (ventas && ventas.length > 0) { %>
        <div class="table-responsive">
          <table class="table table-hover">
            <thead class="thead-light">
              <tr>
                <th>ID</th>
                <th>Valor Total</th>
                <th>Fecha de Venta</th>
                <th>MÃ©todo de Pago</th>
                <th>ID Compra</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% ventas.forEach(venta => { %>
                <tr>
                  <td><%= venta.id_venta %></td>
                  <td>$<%= venta.valor_total.toLocaleString() %></td>
                  <td><%= new Date(venta.fecha_venta).toLocaleDateString() %></td>
                  <td><%= venta.metodo_pago %></td>
                  <td><%= venta.id_compra_PK %></td>
                  <td>
                    <div class="btn-group btn-group-sm">
                      <a href="/admin/ventas/<%= venta.id_venta %>" class="btn btn-info" data-toggle="tooltip" title="Ver detalle">
                        <i class="fas fa-eye"></i>
                      </a>
                      <a href="/admin/ventas/<%= venta.id_venta %>/edit" class="btn btn-warning" data-toggle="tooltip" title="Editar">
                        <i class="fas fa-edit"></i>
                      </a>
                      <form action="/admin/ventas/<%= venta.id_venta %>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger" data-toggle="tooltip" title="Eliminar"
                          onclick="confirmarEliminacion(event, 'venta')">
                          <i class="fas fa-trash"></i>
                        </button>
                      </form>
                    </div>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <div class="alert alert-info">
          <i class="fas fa-info-circle"></i> No hay ventas registradas.
          <a href="/admin/ventas/create" class="alert-link">Registre una nueva venta</a>.
        </div>
      <% } %>
    </div>
  </div>
</div>

<br>
<%- include('../../partials/footer') %>
