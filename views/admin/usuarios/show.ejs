<%- include('../../partials/header', { title: 'Detalle del Usuario' }) %>

<div class="container mt-4">
  <div class="card shadow-sm">
    <div class="card-header bg-info text-white">
      <h4 class="mb-0">
        <i class="fas fa-user"></i> Detalle del Usuario
      </h4>
    </div>
    <div class="card-body">
      <dl class="row">

        <dt class="col-sm-3">ID</dt>
        <dd class="col-sm-9"><%= usuario.id_usuario %></dd>

        <dt class="col-sm-3">Primer Nombre</dt>
        <dd class="col-sm-9"><%= usuario.primer_nombre %></dd>

        <dt class="col-sm-3">Segundo Nombre</dt>
        <dd class="col-sm-9"><%= usuario.segundo_nombre || '-' %></dd>

        <dt class="col-sm-3">Primer Apellido</dt>
        <dd class="col-sm-9"><%= usuario.primer_apellido %></dd>

        <dt class="col-sm-3">Segundo Apellido</dt>
        <dd class="col-sm-9"><%= usuario.segundo_apellido || '-' %></dd>

        <dt class="col-sm-3">Tipo Documento</dt>
        <dd class="col-sm-9"><%= usuario.tipo_documento %></dd>

        <dt class="col-sm-3">Número Documento</dt>
        <dd class="col-sm-9"><%= usuario.numero_documento %></dd>

        <dt class="col-sm-3">Fecha de Nacimiento</dt>
        <dd class="col-sm-9"><%= usuario.fecha_nacimiento.toISOString().split('T')[0] %></dd>

        <dt class="col-sm-3">Celular</dt>
        <dd class="col-sm-9"><%= usuario.celular_usuario %></dd>

        <dt class="col-sm-3">Dirección</dt>
        <dd class="col-sm-9"><%= usuario.direccion_usuario %></dd>

        <dt class="col-sm-3">Nombre de Usuario</dt>
        <dd class="col-sm-9"><%= usuario.nombre_usuario %></dd>

        <dt class="col-sm-3">Correo</dt>
        <dd class="col-sm-9"><%= usuario.correo %></dd>

        <dt class="col-sm-3">Rol</dt>
        <dd class="col-sm-9"><%= usuario.nombre_rol || '-' %></dd>

      </dl>

      <div class="d-flex justify-content-between mt-4">
        <a href="/admin/usuarios" class="btn btn-secondary">
          <i class="fas fa-arrow-left"></i> Volver
        </a>

        <div class="btn-group">
          <a href="/admin/usuarios/<%= usuario.id_usuario %>/edit" class="btn btn-warning">
            <i class="fas fa-edit"></i> Editar
          </a>

          <form action="/admin/usuarios/<%= usuario.id_usuario %>?_method=DELETE" method="POST" class="d-inline">
            <button type="submit" class="btn btn-danger" onclick="return confirm('¿Seguro que quieres eliminar este usuario?')">
              <i class="fas fa-trash"></i> Eliminar
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../../partials/footer') %>
