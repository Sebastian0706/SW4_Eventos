<%- include('partials/header', { title: title || 'Error' , user: user }) %>

    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12 text-gray-200">
        <div class="bg-gray-800 border border-red-500 rounded-xl p-6 shadow-lg">
            <h1 class="text-3xl font-bold text-red-500 flex items-center gap-2 mb-4">
                <i class="fas fa-exclamation-triangle"></i> Error
            </h1>
            <p class="text-lg mb-4">
                <%= message %>
            </p>
            <div class="flex gap-4">
                <!-- Botón para regresar al formulario anterior -->
                <a href="/admin/eventos"
                    class="border border-red-500 text-red-500 hover:bg-red-500 hover:text-white px-4 py-2 rounded-xl transition">
                    <i class="fas fa-arrow-left"></i> Volver
                </a>
                <!-- Botón para ir al index de eventos admin -->
                <a href="/admin/eventos"
                    class="border border-blue-500 text-blue-500 hover:bg-blue-500 hover:text-white px-4 py-2 rounded-xl transition">
                    <i class="fas fa-home"></i> Inicio 
                </a>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>