<%- include('../partials/header', { title }) %>

    <div class="container mt-4">
        <h1><i class="fas fa-ticket-alt"></i>
            <%= isEditing ? 'Editar Boleta' : 'Crear Boleta' %>
        </h1>

        <% if (errors && errors.length> 0) { %>
            <div class="alert alert-danger">
                <ul class="mb-0">
                    <% errors.forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
            </div>
            <% } %>

                <form action="<%= isEditing ? '/boletas/' + boleta.id_boleta + '?_method=PUT' : '/boletas' %>"
                    method="POST">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <label for="precio_boleta">Precio</label>
                                    <input type="number" class="form-control" id="precio_boleta" name="precio_boleta"
                                        required value="<%= boleta.precio_boleta || '' %>">
                                </div>

                                <div class="form-group col-md-4">
                                    <label for="tipo_boleta">Tipo de Boleta</label>
                                    <input type="text" class="form-control" id="tipo_boleta" name="tipo_boleta" required
                                        value="<%= boleta.tipo_boleta || '' %>">
                                </div>

                                <div class="form-group col-md-4">
                                    <label for="localidad_boleta">Localidad</label>
                                    <input type="text" class="form-control" id="localidad_boleta"
                                        name="localidad_boleta" required value="<%= boleta.localidad_boleta || '' %>">
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <label for="num_personas">NÃºmero de Personas</label>
                                    <input type="number" class="form-control" id="num_personas" name="num_personas"
                                        required value="<%= boleta.num_personas || '' %>">
                                </div>

                                <div class="form-group col-md-4">
                                    <label for="id_evento_PK">ID del Evento</label>
                                    <input type="number" class="form-control" id="id_evento_PK" name="id_evento_PK"
                                        required value="<%= boleta.id_evento_PK || '' %>">
                                </div>
                            </div>
                        </div>

                        <div class="card-footer d-flex justify-content-between">
                            <a href="/boletas" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Cancelar</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i>
                                <%= isEditing ? 'Actualizar' : 'Guardar' %>
                            </button>
                        </div>
                    </div>
                </form>
    </div>

    <br>
    <%- include('../partials/footer') %>